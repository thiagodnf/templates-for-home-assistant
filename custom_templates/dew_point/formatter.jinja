{% macro to_feels_like(entity_id) %}
{% set dp = (states(entity_id) | float) %}
{% if dp < 55 %}
    Pleasant
{% elif 55 <= dp < 60 %}
    Comfortable
{% elif 60 <= dp < 65 %}
    Getting Sticky
{% elif 65 <= dp < 70 %}
    Uncomfortable
{% elif 70 <= dp < 75 %}
    Very Humid
{% else %}
    Dangerously Humid
{% endif %}
{% endmacro %}

